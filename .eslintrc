{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "testing-library"],
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/resolver": {
            "alias": {
                "map": [
                    ["@/components", "./src/components/"],
                    ["@/services", "./src/services/"],
                    ["@/context", "./src/context/"],
                    ["@/utils", "./src/utils/"]
                ],
                "extensions": [".js", ".jsx"]
            }
        }
    },
    "rules": {
        // error out formatting not matching prettier rule
        "prettier/prettier": ["error", { "singleQuote": true }]
    }
}
